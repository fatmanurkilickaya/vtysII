create database ogrenci
use ogrenci;
create table ogrenciler(
ogrNO int Primary Key identity(1,1),
ogrAdi nvarchar(100),
ogrSoyadi nvarchar(100)
)
declare @i int;
set @i =1;
while(@i <= 20)
begin
insert into ogrenciler values('Fatma Nur', 'Kılıçkaya');
set @i = @i +1;
end

select * from ogrenciler

declare @ogrNo int, 
@ogrAdi nvarchar(100), @ogrSoyadi nvarchar(100);
declare OgrenciCursor Cursor 
for select * from ogrenciler
open
fetch next from OgrenciCursor into @ogrNo, @OgrAdi
while @@FETCH_STATUS=0
begin
declare @ogrenciSoyadi  nvarchar(100)
select ogrenciSoyadi = @ogrenciSoyadi 
from ogrenciler 
where ogrNO = @ogrNo
if @ogrNo % 2 = 0
select @ogrAdi + '-' + @ogrSoyadi
else 
select @ogrAdi + '_ _' + @ogrenciSoyadi

end
